<?xml version="1.0"?>
<ruleset name="CrontabManager">
    <description>Custom coding standards for Crontab Manager</description>
    
    <!-- Scan these directories -->
    <file>.</file>
    
    <!-- Exclude these directories -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    
    <!-- Use PSR12 standard with customizations -->
    <rule ref="PSR12">
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterClose"/>
        <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterClose"/>
        <exclude name="Generic.WhiteSpace.ScopeIndent"/>
    </rule>
    
    <!-- Custom rules -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
        </properties>
    </rule>
</ruleset>
