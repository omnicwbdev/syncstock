FROM php:7.4-cli

# Instala dependências do sistema
RUN apt-get update && apt-get install -y \
    firebird-dev \
    default-libmysqlclient-dev \
    git \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Instala o instalador oficial de extensões PHP
ADD https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/

RUN chmod +x /usr/local/bin/install-php-extensions

# Instala APENAS as extensões que você precisa
RUN install-php-extensions \
    pdo_firebird \
    pdo_mysql

# Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Diretório de trabalho
WORKDIR /app

# Copia composer primeiro (cache)
COPY composer.json composer.lock ./
RUN composer install --no-dev --no-scripts --no-interaction

# Copia o projeto
COPY . .

# Gera autoload
RUN composer dump-autoload --optimize

# Cria log
RUN touch /app/sincronizacao.log && chmod 666 /app/sincronizacao.log

# Mantém container vivo (para execs manuais)
CMD ["tail", "-f", "/dev/null"]
