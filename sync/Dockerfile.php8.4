FROM php:8.4-cli

# Dependências do sistema para Firebird e MySQL
RUN apt-get update && apt-get install -y \
    firebird-dev \
    default-libmysqlclient-dev \
    git \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Copia o instalador de extensões do GitHub Container Registry (GHCR)
COPY --from=ghcr.io/mlocati/php-extension-installer /usr/bin/install-php-extensions /usr/local/bin/

# Instala APENAS as extensões necessárias
RUN install-php-extensions \
    pdo_firebird \
    pdo_mysql

# Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Diretório de trabalho
WORKDIR /app

# Copia composer primeiro (cache de layers)
COPY composer.json composer.lock ./
RUN composer install --no-dev --no-scripts --no-interaction

# Copia o projeto
COPY . .

# Gera autoload otimizado
RUN composer dump-autoload --optimize

# Cria log de sincronização
RUN touch /app/sincronizacao.log && chmod 666 /app/sincronizacao.log

# Mantém container vivo para execuções manuais
CMD ["tail", "-f", "/dev/null"]
