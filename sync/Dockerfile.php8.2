FROM php:8.2-cli

# Adiciona repositório oficial do Firebird
RUN apt-get update && apt-get install -y \
    gnupg \
    wget \
    && wget -O - https://github.com/FirebirdSQL/firebird/releases/download/v3.0.11/Firebird-3.0.11-0.amd64.tar.gz | tar xz -C /tmp \
    && cd /tmp/Firebird-3.0.11-0.amd64 && \
    dpkg -i *.deb || true \
    && apt-get install -f -y \
    && rm -rf /tmp/Firebird*

# Instala dependências do sistema
RUN apt-get update && apt-get install -y \
    libfbclient2 \
    firebird-dev \
    default-libmysqlclient-dev \
    git \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Instala o instalador oficial de extensões PHP
ADD https://github.com/mlocati/docker-php-extension-installer/releases/latest/download/install-php-extensions /usr/local/bin/

RUN chmod +x /usr/local/bin/install-php-extensions

# Instala pdo_firebird e pdo_mysql
RUN install-php-extensions \
    pdo_firebird \
    pdo_mysql

# Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /app

# Composer
COPY composer.json composer.lock ./
RUN composer install --no-dev --no-scripts --no-interaction

COPY . .

RUN composer dump-autoload --optimize

RUN touch /app/sincronizacao.log && chmod 666 /app/sincronizacao.log

CMD ["tail", "-f", "/dev/null"]
